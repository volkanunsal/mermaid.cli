    "mermaid": "volkanunsal/mermaid#build",
    "standard": "^11.0.1",
    "yarn-upgrade-all": "^0.3.0"
  },
  "files": [
    "index.bundle.js",
    "mermaid.min.js",
    "index.html",
    "fontawesome/*"
